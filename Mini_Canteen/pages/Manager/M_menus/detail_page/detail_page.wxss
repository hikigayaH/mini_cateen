/* pages/M_menus/M_menus.wxss */
page{
  width: 100%;
  height: 80%;
  padding: 26rpx;
  box-sizing: border-box;
}

.box{
  display: flex;
  margin: auto 0;
  width: 100%;
}

.label{
  flex-shrink: 0;
  width: 4em;
  height: 80rpx;
  margin-right: 20rpx;
  line-height: 80rpx;
  text-align: justify;
  text-align-last: justify;
}

.label-nav{
  flex-shrink: 0;
  width: 2em;
  height: 80rpx;
  line-height: 80rpx;
}

.textb {
  display: flex;
  flex: 1;
  position: relative;
  margin-left: 30rpx;
}

.textb input {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  border: 2rpx solid #ddd;
  outline: none;
  background: none;
  padding: 0px 5px;
  height: 60rpx;
  margin: auto 0;
  border-radius: 10rpx;
}

.textb text{
  flex: 1;
  font-size: 30rpx;
  color: #333;
  border: 2rpx solid #ddd;
  background: none;
  padding: 0px 5px;
  height: 60rpx;
  margin: auto 0;
  border-radius: 10rpx;
  line-height: 60rpx;
}

.contain{
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
}

.big-box{
  display: flex;
  flex: 3;
  margin-bottom: 100rpx;
}

.big-box image{
  width: 400rpx;
  height: 400rpx;
  background-color: #eee;
  margin-right: 10rpx;
  margin-top: 26rpx;
}

.nav-box{
  display: flex;
  flex-direction: column;
}

.item-nav{
  flex: 1;
  display: flex;
}

.line-box{
  flex: 1;
}

.textb .focus{
  border: 2rpx solid #ffbe76;
  box-shadow: 0rpx 0rpx 12rpx #ffbe76;
  caret-color: #ffbe76;
}

.btn {
  display: inline-block;
  width: 43vw;
  height: 50px;
  border: 2rpx #ddd solid;
  background: #2c2c2c;
  background-size: 200%;
  color: #ffbe76;
}

.btn_box{
  flex: 0;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.addbtn {
  display: block;
  width: 90vw;
  height: 50px;
  border: none;
  background: #2c2c2c;
  background-size: 200%;
  color: #ffbe76;
}