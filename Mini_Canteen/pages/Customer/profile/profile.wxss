/* pages/profile/profile.wxss */

@font-face {
    font-family: 'icomoon';
    src: url(data:application/font-woff2;charset=utf-8;base64,) format('woff2');
    font-weight: normal;
    font-style: normal;
}

.icon-verified_user:before {
  content: "\e907";
}

.icon-person:before {
  content: "\e906";
}

.icon-settings:before {
  content: "\e901";
}

.icon-keyboard_arrow_right:before {
  content: "\e903";
}

.icon-money:before {
  content: "\e904";
}

.icon{
  font-family: 'icomoon';
  font-weight: normal;
  font-style: normal;
}

.front-icon{
  margin-right: 16rpx;
}

.icon-keyboard_arrow_right{
  float: right;
}

page {
  height: 100vh;
  width: 100vw;
}

.important{
  color: #ddd
}

.header-box {
  background-color: #ffbe76;
  height: 200rpx;
  width: 100%;
  display: flex;
}

.image-box {
  width: 200rpx;
  height: 100%;
  display: flex;
}

.header-image {
  height: 70%;
  width: 70%;
  border-radius: 70rpx;
  background-color: white;
  margin: auto;
}

.body-box {
  width: 100%;
}

.nickName {
  font-size: 36rpx;
  line-height: 36rpx;
  display: inline-block;
  margin-top: 30rpx;
}

.exitbtn {
  display: block;
  width: 90vw;
  height: 50px;
  border: none;
  background: #2c2c2c;
  color: #ffbe76;
  margin-bottom: 20rpx;
  margin-top: 40rpx;
}

.navi-btn {
  padding: 0 30rpx;
  line-height: 80rpx;
  height: 80rpx;
  position: relative;
}

.navi-btn::after {
  content: '';
  position: absolute;
  width: 92%;
  left: 4%;
  bottom: 0%;
  background-color: #ddd;
  height: 2rpx;
}
