/* pages/Customer/cart/cart.wxss */
@font-face {
  font-family: 'icomoon';
  src: url(data:application/font-woff2;charset=utf-8;base64,) format('woff2');
  font-weight: normal;
  font-style: normal;
  font-display: block;
}

.icon-cart::before {
  content: "\e900";
}

.icon-minus-alt:before {
  content: "\e901";
}

.icon-plus-alt:before {
  content: "\e902";
}

.iconfont-plus{
  font-family: 'icomoon';
  font-size: 40rpx;
  font-style: normal;
  color: #ffbe76;
  margin: 0 10rpx;
  vertical-align: middle
}

.iconfont-minus{
  font-family: 'icomoon';
  font-size: 40rpx;
  font-style: normal;
  color: #dcdde1;
  margin: 0 10rpx;
  vertical-align: middle
}

.icon-cart{
  font-family: 'icomoon';
  font-size: 80rpx;
  font-style: normal;
  color:#87888E;
  margin-left:20rpx;
  position: relative;
}

.body{
  width: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.cart-list{
  flex:1;
  width: 100%;
  min-height: 1096rpx;
  background-color: #EDEDED;
  margin-bottom: 110rpx;
}

.cart-item{
  height: 150rpx;
  width: 730rpx;
  background-color: white;
  margin: 20rpx 10rpx;
  box-sizing: border-box;
  padding: 20rpx 10rpx;
  border-radius: 10rpx;
  display: flex;
}

.image_box {
  height: 110rpx;
  width: 100rpx;
  margin: 0 10rpx;
  display: inline-block;
  border-radius: 10rpx;
}

.image_box image {
  height: 100rpx;
  width: 100rpx;
  border-radius: 10rpx;
}

.box{
  display: flex;
  flex: 1;
}

.text_box {
  vertical-align: top;
  width: 75%;
}

.calcu-box {
  flex: 1;
  display: flex;
}

.calcu{
  margin: auto;
}

.cart_title {
  display: inline-block;
  font-weight: bolder;
  margin-bottom: 10rpx;
}

.cart_tip{
  margin-left: 20rpx;
  display: inline-block;
  font-size: 26rpx;
  margin-bottom: 10rpx;
  color: #A9A9A9;
  font-weight: bold;
  vertical-align: middle;
}

