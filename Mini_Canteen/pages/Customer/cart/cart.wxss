.cart_price {
  margin-top: 20rpx;
  color: #e55039;
  display: block;
  font-size: 42rpx;
  font-weight: bolder;
}

.operate-bar{
  flex: 1;
  z-index: 1001; 
  position: fixed;
  bottom: 0px;
  height:110rpx;
  width:100%;
  display: flex;
  border-radius: 10rpx;
}

.gouwuche{
  width:75%;
  background:#353535;
  height: 100%; 
}

.number-msg{
  padding: 2rpx 10rpx;
  border-radius:50%;
  background: #e55039;
  color:white;
  font-size:20rpx;
  position: absolute;
  text-align: center;
  top:0rpx;
  right:-10rpx;
}

.gouwuche-price{
  color:#A9A9A9;
  display:flex;
  align-items: center;
  margin-left:20rpx;
  font-size:30rpx
}

.submit-btn{
  height:100%;
  background:#F7F7F7;
  width:25%;
  display:flex;
}

.submit-btn-label{
  color:#A9A9A9;
  font-size:30rpx;
  margin:auto;
}

.activity-color{
  color: #ffbe76;
}

.active-color-btn{
  background-color: #ffbe76;
  color: white
}